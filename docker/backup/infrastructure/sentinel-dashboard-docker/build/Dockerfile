FROM openjdk:8

ENV SENTINEL_HOME /home/sentinel-dashboard
ENV SENTINEL_FILE_NAME sentinel-dashboard-1.6.3.jar

RUN mkdir -p ${SENTINEL_HOME}

COPY ${SENTINEL_FILE_NAME} ${SENTINEL_HOME}

RUN chmod -R +x ${SENTINEL_HOME}/*jar

WORKDIR ${SENTINEL_HOME}

EXPOSE 8080

CMD java ${JAVA_OPTS} -jar ${SENTINEL_FILE_NAME}